<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="infoClasses" auto-import="true">
	<class name="RgUserInfo" >
		<!-- 主键 ，映射-->
		<id name="id" column="user_No">
			 <generator class="increment"/>
		</id>
		<property name="username" column="user_name" type="string" length="20" />
		<property name="pwd" column="user_pwd" type="string" />
		<property name="age" column="user_age" />
		<property name="date" column="user_date" type="timestamp" />
	</class>
	
</hibernate-mapping>
