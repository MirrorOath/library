<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="infoClasses" auto-import="true">
	<class name="BookInfo" >
		<!-- 主键 ，映射-->
		<id name="bookId" column="book_No">
			 <generator class="increment"/>
		</id>
		<property name="bookName" column="book_name" type="string" />
		<property name="press" column="book_press" type="string" />
		<property name="author" column="book_author" type="string" />
		<property name="imageSrc" column="book_imageSrc" type="string" />
	</class>
	
</hibernate-mapping>
